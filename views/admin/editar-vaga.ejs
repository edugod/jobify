<%- include('header') %>
<h2>
	Editar Vaga:
	<a href="/admin/vagas">Vagas</a>
</h2>
<div>
	<form method="POST">
		<label>Título da Vaga:</label>
		<input type="text" name="titulo" value="<%= vaga.titulo %>"/>
		<br />
		<label>Descrição:</label>
		<textarea name="descricao" id="" cols="30" rows="10"><%= vaga.descricao %></textarea>
		<br />
		<label>Categoria:</label>
		<select name="categoria">
			<% categorias.forEach( categoria => { %>
			<option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){ %>selected <% } %>>
				<%= categoria.categoria %>
			</option>

			<% }) %>
		</select>
		<br />
		<button>Salvar Vaga</button>
	</form>
</div>
<%- include('footer') %>
